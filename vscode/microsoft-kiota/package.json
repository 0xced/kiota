{
  "name": "microsoft-kiota",
  "displayName": "Microsoft Kiota",
  "description": "REST API client generator based on OpenAPI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiota-openapi-explorer",
          "title": "Kiota OpenAPI Explorer",
          "icon": "media/openapi.svg"
        }
      ],
      "panel": [
        {
          "id": "kiota-dependencies-info",
          "title": "Kiota Dependencies Information",
          "icon": "media/dependencies.svg"
        }
      ]
    },
    "views": {
     "kiota-openapi-explorer": [
      {
        "id": "microsoft-kiota.openApiExplorer",
        "name": "Kiota OpenAPI Explorer",
        "icon": "media/openapi.svg",
        "contextualTitle": "OpenAPI Explorer"
      }
     ],
     "kiota-dependencies-info": [
      {
        "id": "microsoft-kiota.dependenciesInfo",
        "name": "Kiota Dependencies Information",
        "icon": "media/dependencies.svg",
        "contextualTitle": "Dependencies Information",
        "type": "webview",
        "visibility": "visible"
      }
     ]
    },
    "menus": {
      "view/title": [
        {
          "command": "microsoft-kiota.searchApiDescription",
          "when": "view == microsoft-kiota.openApiExplorer",
          "group": "navigation"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.generateClient",
          "when": "view == microsoft-kiota.openApiExplorer",
          "group": "navigation"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.closeDescription",
          "when": "view == microsoft-kiota.openApiExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "microsoft-kiota.openApiExplorer.addToSelectedEndpoints",
          "when": "view == microsoft-kiota.openApiExplorer",
          "group": "inline"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.addAllToSelectedEndpoints",
          "when": "view == microsoft-kiota.openApiExplorer"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.removeFromSelectedEndpoints",
          "when": "view == microsoft-kiota.openApiExplorer",
          "group": "inline"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.removeAllFromSelectedEndpoints",
          "when": "view == microsoft-kiota.openApiExplorer"
        }
      ],
      "commandPalette": [
        {
          "command": "microsoft-kiota.openApiExplorer.addToSelectedEndpoints",
          "when": "false"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.addAllToSelectedEndpoints",
          "when": "false"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.removeFromSelectedEndpoints",
          "when": "false"
        },
        {
          "command": "microsoft-kiota.openApiExplorer.removeAllFromSelectedEndpoints",
          "when": "false"
        }  
      ]
    },
    "commands": [
      {
        "command": "microsoft-kiota.updateClients",
        "title": "Kiota: Update API clients in the current workspace"
      },
      {
        "command": "microsoft-kiota.openApiExplorer.generateClient",
        "title": "Kiota: Generate API client",
        "icon": "$(play)"
      },
      {
        "command": "microsoft-kiota.searchApiDescription",
        "title": "Kiota: Search for an API description",
        "icon": "$(search)"
      },
      {
        "command": "microsoft-kiota.openApiExplorer.addToSelectedEndpoints",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "microsoft-kiota.openApiExplorer.addAllToSelectedEndpoints",
        "title": "Add All"
      },
      {
        "command": "microsoft-kiota.openApiExplorer.removeFromSelectedEndpoints",
        "title": "Remove",
        "icon": "$(remove)"
      },
      {
        "command": "microsoft-kiota.openApiExplorer.removeAllFromSelectedEndpoints",
        "title": "Remove All"
      },
      {
        "command": "microsoft-kiota.openApiExplorer.closeDescription",
        "title": "Kiota: Close API description",
        "icon": "$(close)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.1.0"
  }
}
